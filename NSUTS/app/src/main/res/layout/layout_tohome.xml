<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/SelectBusViewToHome"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:textColor="@color/primaryTextColor"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Select Bus"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:id="@+id/spinnerToHome"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SelectBusViewToHome"
        android:background="@drawable/edit_text_bottom"
        android:padding="15dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:id="@+id/forDestinationseat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerToHome"
        android:orientation="horizontal"
        android:background="@color/light_green"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/AseatTextToHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Available Seat:  "
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/AseatToHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="00"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/Destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/forDestinationseat"
        android:layout_marginTop="50dp">

        <Spinner
            android:id="@+id/DestinationSpinner"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bottom"
            android:padding="15dp"
            android:layout_marginTop="10dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/Destination"
        android:layout_marginTop="150dp">


        <Button
            android:id="@+id/ConfirmDestinationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryTextColor"
            android:text="Confirm Booking" />
    </LinearLayout>

</RelativeLayout>